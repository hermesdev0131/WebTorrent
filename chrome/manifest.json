{
  "manifest_version": 2,

  "name": "WebTorrent",
  "description": "Simple, robust BitTorrent client for the browser",
  "version": "0.1.0",

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },

  "permissions": [
    {
      "socket": [
        "tcp-connect:*:*",
        "tcp-listen::*",
        "udp-send-to::*",
        "udp-bind::*"
      ]
    },
    "storage",
    "unlimitedStorage",
    {
      "fileSystem": [
        "write",
        "retainEntries",
        "directory"
      ]
    },
    "http://*/*"
  ],

  "icons": { "16": "calculator-16.png", "128": "calculator-128.png" }
}